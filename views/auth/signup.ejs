<%- include('../partials/head')%>
</head>
<body class="min-h-screen bg-gradient-to-br from-pink-100 via-yellow-100 to-red-100 flex flex-col">
    <%- include('../partials/nav')%>
    <div class="flex flex-1 items-center justify-center">
        <div class="bg-white bg-opacity-90 rounded-lg shadow-lg p-8 w-full max-w-md">
            <h1 class="text-3xl font-bold text-center text-pink-600 mb-6 flex items-center justify-center">
                <!-- User Add Icon -->
                <svg class="w-7 h-7 mr-2 text-pink-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v6m3-3h-6m-2 4a4 4 0 100-8 4 4 0 000 8zm6 4v-2a4 4 0 00-3-3.87"></path>
                </svg>
                Signup
            </h1>
            <% if(errors.length >0) { %>
                <ul class="mb-4">
                    <% errors.forEach(error => { %>
                        <li class="text-red-500 text-sm flex items-center">
                            <!-- Exclamation Icon -->
                            <svg class="w-4 h-4 mr-1 text-red-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12A9 9 0 113 12a9 9 0 0118 0z"/>
                            </svg>
                            <%= error %>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
            <form action="/signup" method="POST" class="space-y-4">
                <div>
                    <input type="text" id="FirstName" name="firstName" required
                        placeholder="First Name"
                        class="w-full px-4 py-2 border border-pink-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-400" />
                </div>
                <div>
                    <input type="text" id="lastname" name="lastname"
                        placeholder="Last Name"
                        class="w-full px-4 py-2 border border-pink-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-400" />
                </div>
                <div>
                    <input type="email" id="email" name="email" required
                        placeholder="Email"
                        class="w-full px-4 py-2 border border-pink-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-400" />
                </div>
                <div>
                    <input type="password" id="password" name="password" required
                        placeholder="Password"
                        class="w-full px-4 py-2 border border-pink-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-400" />
                </div>
                <div>
                    <input type="password" id="confirmpassword" name="confirmpassword" required
                        placeholder="Confirm Password"
                        class="w-full px-4 py-2 border border-pink-300 rounded focus:outline-none focus:ring-2 focus:ring-pink-400" />
                </div>
                <div>
                    <label class="block mb-1 font-medium text-pink-600">User Type</label>
                    <div class="flex space-x-4">
                        <label class="inline-flex items-center">
                            <input type="radio" id="host" name="userType" value="host" required class="form-radio text-pink-500">
                            <span class="ml-2">Host</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="radio" id="guest" name="userType" value="guest" required class="form-radio text-pink-500">
                            <span class="ml-2">Guest</span>
                        </label>
                    </div>
                </div>
                <div class="flex items-center">
                    <input type="checkbox" id="terms" name="terms" required class="form-checkbox text-pink-500">
                    <label for="terms" class="ml-2 text-sm text-gray-700">I agree to the terms and conditions</label>
                </div>
                <button type="submit"
                    class="w-full flex items-center justify-center bg-pink-500 hover:bg-pink-600 text-white font-semibold py-2 px-4 rounded transition">
                    <!-- User Add Icon -->
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v6m3-3h-6m-2 4a4 4 0 100-8 4 4 0 000 8zm6 4v-2a4 4 0 00-3-3.87"></path>
                    </svg>
                    Signup
                </button>
            </form>
        </div>
    </div>
</body>
</html>