<%- include('../partials/head')%>
</head>
<body class="min-h-screen bg-gradient-to-br from-pink-100 via-yellow-100 to-red-100 flex flex-col">
    <%- include('../partials/nav')%>
    <div class="container mx-auto py-8 flex-1">
        <h1 class="text-3xl font-bold text-center text-pink-600 mb-8">Favourite List</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            <% favouriteHomes.forEach(home => { %>
                <div class="bg-white bg-opacity-90 rounded-lg shadow-lg p-6 flex flex-col items-center">
                    <img src="<%= home.photourl %>" alt="House Image" class="rounded-lg mb-4 w-full h-48 object-cover" />
                    <div class="w-full">
                        <div class="flex items-center mb-2">
                            <svg class="w-5 h-5 text-yellow-400 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 17.75L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                            </svg>
                            <span class="font-semibold text-lg"><%= home.houseName %></span>
                        </div>
                        <div class="flex items-center mb-1">
                            <svg class="w-5 h-5 text-green-400 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 0V4m0 16v-4"/>
                            </svg>
                            <span class="text-gray-700 font-semibold">â‚¹<%= home.pricepernight %> / night</span>
                        </div>
                        <div class="flex items-center mb-1">
                            <svg class="w-5 h-5 text-pink-400 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 22s8-4.5 8-10V7a4 4 0 00-8-3 4 4 0 00-8 3v5c0 5.5 8 10 8 10z"/>
                            </svg>
                            <span class="text-gray-700"><%= home.Location %></span>
                        </div>
                        <div class="flex items-center mb-4">
                            <svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967a1 1 0 00.95.69h4.175c.969 0 1.371 1.24.588 1.81l-3.38 2.455a1 1 0 00-.364 1.118l1.287 3.966c.3.922-.755 1.688-1.54 1.118l-3.38-2.454a1 1 0 00-1.175 0l-3.38 2.454c-.784.57-1.838-.196-1.54-1.118l1.287-3.966a1 1 0 00-.364-1.118L2.05 9.394c-.783-.57-.38-1.81.588-1.81h4.175a1 1 0 00.95-.69l1.286-3.967z"/>
                            </svg>
                            <span class="text-gray-700"><%= home.Rating %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <a href="/home_list/<%= home._id %>" class="flex items-center text-pink-500 hover:text-pink-700 font-semibold">
                                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
                                </svg>
                                Details
                            </a>
                           
                            <form action="favorites/delete/<%= home._id %>" method="POST" class="ml-4">
                                <button type="submit" class="flex items-center text-red-500 hover:text-red-700 font-semibold">
                                    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                    </svg>
                                    Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('../partials/footer')%>
</body>