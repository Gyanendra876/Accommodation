<header class="bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 text-white shadow-md">
    <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center justify-between">
            <a href="/" class="flex items-center text-2xl font-bold text-yellow-100 hover:text-white">
                <svg class="w-7 h-7 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9-9 9 9M4 10v10a1 1 0 001 1h3m10-11v10a1 1 0 01-1 1h-3m-6 0h6"></path>
                </svg>
                Staynest
            </a>
            <div class="flex items-center space-x-4">
                <% if (isLoggedIn) { %>
                    <% if (user && user.userType === 'guest') { %>
                        <a href="/home_list" class="flex items-center text-sm font-medium hover:text-yellow-100">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                            Home List
                        </a>
                        <a href="/bookings" class="flex items-center text-sm font-medium hover:text-yellow-100">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <rect width="18" height="18" x="3" y="4" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round"></rect>
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16 2v4M8 2v4M3 10h18"></path>
                            </svg>
                            Bookings
                        </a>
                        <a href="/favourite-list" class="flex items-center text-sm font-medium hover:text-yellow-100">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 016.364 0L12 7.636l1.318-1.318a4.5 4.5 0 116.364 6.364L12 21.364l-7.682-7.682a4.5 4.5 0 010-6.364z"></path>
                            </svg>
                            Favourite List
                        </a>
                    <% } else { %>
                        <a href="/host/add-home" class="flex items-center text-sm font-medium hover:text-yellow-100">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                            </svg>
                            Add Home
                        </a>
                        <a href="/host/hosthome_list" class="flex items-center text-sm font-medium hover:text-yellow-100">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7m-9 2v6m0 0h4m-4 0a2 2 0 01-2-2v-2a2 2 0 012-2h4a2 2 0 012 2v2a2 2 0 01-2 2"></path>
                            </svg>
                            Home-list
                        </a>
                    <% } %>
                <% } %>
                <% if (!isLoggedIn) { %>
                    <a href="/login" class="flex items-center text-sm font-medium hover:text-yellow-100">
                        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H3m0 0l4-4m-4 4l4 4m13-4a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Login
                    </a>
                    <a href="/signup" class="flex items-center text-sm font-medium hover:text-yellow-100">
                        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v6m3-3h-6m-2 4a4 4 0 100-8 4 4 0 000 8zm6 4v-2a4 4 0 00-3-3.87"></path>
                        </svg>
                        Signup
                    </a>
                <% } else { %>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="flex items-center text-sm font-medium bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1"></path>
                            </svg>
                            Logout
                        </button>
                    </form>
                <% } %>
            </div>
        </nav>
    </div>
</header>